{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "checkJs": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "noImplicitAny": false,
      "noImplicitThis": false,
      "lib": ["es2015", "dom", "dom.iterable"],
      "target": "es2022",
      "sourceMap": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "outDir": "./dist",
    },
    "include": ["src/**/*"],
    "exclude": ["src/setupTests.*", "src/**/*.test.*"]
  }