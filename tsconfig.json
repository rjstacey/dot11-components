{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "checkJs": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react-jsx",
      "noImplicitAny": false,
      "noImplicitThis": false,
      "lib": ["ES2022", "DOM"],
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
    },
    "include": ["src/**/*"],
    "exclude": ["src/setupTests.*", "src/**/*.test.*", "src/stories"]
  }